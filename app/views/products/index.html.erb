    <% product = @products.shuffle%> 
            <% product.each do |product| %>
            <div class="col-md-3 col-sm-6 hero-feature" style="height: 500px">
                <div class="thumbnail" >
                    <img src= <%= "http:" + product.image_url %> style="height: 250px" >
                    <div class="caption">

                        <h3 style="height: 75px"><%= product.description %></h3>
                        <p> <%= product.brand %> </p>
                        <p> <%= product.store %> </p>

                        <p>
                            <a href="#" class="btn btn-primary">Favorite</a> <a href= <%= "http://www.ceratoboutique.com" + product.destination_url %> class="btn btn-default">More Info</a>
                        </p>
                    </div>
                </div>
            </div>
        <%end%>



