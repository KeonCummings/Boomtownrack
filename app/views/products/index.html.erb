<% product = @products %> 
    <% product.each do |product| %>
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail" style="max-height: 250px" > 
                <img src= <%= "http:" + product.image_url %> style="max-height:100%;" >
                <div class="caption">
                    <!-- <h4 class="pull-right">$24.99</h4> -->
                    <h4><a href= <%= "http://www.ceratoboutique.com" + product.destination_url %> > <%= product.description %>
                    </a> 
                    </h4>
                    <p> <%= product.brand%> </p>
                    <p> <%= product.store %> </p>
                </div>
                <div class="ratings">
                    <p class="pull-right">15 reviews</p>
                    <p>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                    </p>
                </div>
            </div>
        </div>
    <%end%>
        
    
