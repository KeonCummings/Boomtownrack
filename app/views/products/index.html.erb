<% product = @products %>

    <% product.each do |product| %>  
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <img src=<%= "http:" + product.image_url %>
                <div class="caption">
                    <h4 class="pull-right">$24.99</h4>
                    <h4><a href= <%= "http://www.ceratoboutique.com" + product.destination_url %> 
                    </h4>
                    <p> <%= product.description %> <a target="_blank" href= <%= "http://www.ceratoboutique.com" + product.destination_url %> </a>.</p>
                </div>
                <div class="ratings">
                    <p class="pull-right">15 reviews</p>
                    <p>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                    </p>
                </div>
            </div>
        </div>
    <%end%>